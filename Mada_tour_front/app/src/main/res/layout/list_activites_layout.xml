<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout_destination">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mycard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/myimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/anakaojpg"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="HAHA eafsgsg"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf = "@id/mycard"
        app:layout_constraintLeft_toRightOf="@id/mycard"
        app:layout_constraintTop_toTopOf="@id/mycard"

        />
    <TextView
        android:id="@+id/type_region"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:text="REGION "
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf = "@id/mycard"
        app:layout_constraintLeft_toRightOf="@id/mycard"
        />

</androidx.constraintlayout.widget.ConstraintLayout>